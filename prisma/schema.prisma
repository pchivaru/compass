datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model AerialVehicle {
  id String @id @default(uuid())

  type String @db.Text

  latitude Float
  longitude Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model TerrestrialVehicle {
  id String @id @default(uuid())

  type String @db.Text

  latitude Float
  longitude Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}






